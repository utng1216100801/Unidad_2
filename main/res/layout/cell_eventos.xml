<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_500"
    card_view:cardCornerRadius="@dimen/size_6"
    card_view:cardElevation="@dimen/size_10"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/imv_photo"
        android:layout_width="@dimen/size_150"
        android:layout_height="@dimen/size_480"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:padding="@dimen/size_10"
            android:layout_gravity="bottom"
            android:background="@color/transp1"
            android:textColor="@color/transp2"
            android:textSize="@dimen/size_30s"
            android:textStyle="bold"/>

</android.support.v7.widget.CardView>